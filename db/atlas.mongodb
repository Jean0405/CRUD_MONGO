  {
    $lookup: {
      from: "sucursal",
      localField: "ID_sucursal",
      foreignField: "_id",
      as: "sucursal_info",
    },
    $lookup: {
      from: "automovil",
      localField: "ID_automovil",
      foreignField: "_id",
      as: "automovil_info",
    },
  },

  {
    $unwind: "$sucursal_info",
    $unwind: "$automovil_info",
  },
  {
    $group: {
      _id: "$ID_sucursal",
      cantidad_total_automoviles: { $sum: "$cantidad_disponible" },
    },
  },
]);

