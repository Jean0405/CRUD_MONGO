//4. Listar los alquiler activos
use("practica_mongo");
db.getCollection("cliente").aggregate([
  {
    $lookup: {
      from: "alquiler",
      localField: "_id",
      foreignField: "ID_cliente",
      as: "Alquiler_activo",
    },
  },

  {
    $unwind: "$Alquiler_activo",
  },
  {
    $match: { "Alquiler_activo.estado": { $eq: "ACTIVO" } },
  },
  // {
  //   $project: {
  //     ID_cliente: 0,
  //     ID_automovil: 0,
  //     "Alquiler_activo.email": 0,
  //   },
  // },
  {
    $group: {
      _id: "$_id",
      nombre: {
        $first: "$nombre",
      },
      apellido: {
        $first: "$apellido",
      },
      telefono: {
        $first: "$telefono",
      },
      Alquiler_activo: { $push: "$Alquiler_activo" },
    },
  },
]);

