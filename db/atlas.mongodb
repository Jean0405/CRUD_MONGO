    $match: { _id: 1 },
  },
  {
    $lookup: {
      from: "sucursal",
      localField: "ID_sucursal",
      foreignField: "_id",
      as: "automoviles_relacionados_fk",
    },
    $lookup: {
      from: "automovil",
      localField: "ID_automovil",
      foreignField: "_id",
      as: "detalles automoviles",
    },
  },
]);

